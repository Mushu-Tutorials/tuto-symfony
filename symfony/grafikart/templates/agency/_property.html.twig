<div class="card mb-4">

	<a href="{{ path('agency_show', {slug: property.slug, id: property.id}) }}">
		{% if property.filename %}
 			<img
			src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('my_thumb') }}" class="card-img-top" style="width: 100%; height: auto;">
			{# <img src="{{ vich_uploader_asset(property, 'imageFile')|imagine_filter('my_thumb') }}" class="card-img-top" style="width: 100%; height: auto;"> #}
		{% else %}
			<img src="{{ '/images/default.jpg' | imagine_filter('my_thumb') }}" class="card-img-top" style="width: 100%; height: auto;">
		{% endif %}
	</a>

	<div class="card-body">

		<h5 class="card-title">
			<a href="{{ path('agency_show', {slug: property.slug, id: property.id}) }}">{{ property.title }}</a>
		</h5>

		{# <p class="card-text">{{ property.description|nl2br }}</p> #}
		<p class="card-text">{{ property.surface }}m2 -
			{{ property.city }}
			({{ property.zipcode }})</p>

		<div class="text-primary" style="font-size: 2rem; font-weight: bold;">
			{{ property.formattedPrice }}
			â‚¬</div>

	</div>
</div>
