<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">

		<title>
			{% block title %}
				Agency
			{% endblock %}
		</title>

		{# CSS Flatly theme #}
		<link
		rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">

		{# CSS select2 theme #}
		<link
		rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/css/select2.min.css">

		{# Others #}
		{% block stylesheets %}{% endblock %}

	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{ path('home') }}">Mon Agence</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item {% if current_page is defined and current_page == 'properties' %}active{% endif %}">
						<a class="nav-link" href="{{ path('agency_create') }}">Ajouter un bien
						</a>
					</li>

					<li class="nav-item {% if current_page is defined and current_page == 'properties' %}active{% endif %}">
						<a class="nav-link" href="{{ path('agency_properties') }}">Acheter
						</a>
					</li>

				</ul>

				<ul class="navbar-nav">

					{% if app.user %}
						<li class="nav-item {% if current_page is defined and current_page == 'properties' %}active{% endif %}">
							<a class="nav-link" href="{{ path('admin_property_index') }}">Admin
							</a>
						</li>
					{% endif %}

					<li class="nav-item">
						{% if app.user %}
							<a class="nav-link" href="{{ path('security_logout') }}">
								DÃ©connexion
							</a>
						{% else %}
							<a class="nav-link" href="{{ path('security_login') }}">
								Connexion
							</a>
						{% endif %}
					</li>
				</ul>

			</div>
		</nav>

		{% block body %}{% endblock %}

		{# JQuery #}
		<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

		{# JS select2 theme #}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/js/select2.min.js"></script>
		<script>
			$('select').select2();
		</script>

		{% block javascripts %}{% endblock %}

	</body>
</html>
